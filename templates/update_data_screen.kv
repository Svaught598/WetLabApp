<UpdateScreen>:
    BoxLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDToolbar:
            title: "Update Data"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.get_main_screen()]]

        MDTabs:
            id: update_tabs
        
        AnchorLayout:
            anchor_x: 'right'
            size_hint_y: None
            height: dp(58)
            spacing: dp(5)
            padding: dp(5)

            MDFloatingActionButton:
                icon: 'plus'
                size_hint: None, None
                size: dp(48), dp(48)
                opposite_colors: True
                elevation_normal: 8
                on_release: root.plus_button_pressed()

            Widget:

<SolventTab>
    id: solvent
    FloatLayout:
        MDLabel:
            text: 'Solvent'
            halign: 'center'
            theme_text_color: 'Primary'
            font_style: 'H6'

<MaterialTab>
    id: materi
    FloatLayout:
        MDLabel:
            text: 'Materials'
            halign: 'center'
            theme_text_color: 'Primary'
            font_style: 'H6'

<NewSolventScreen>:
