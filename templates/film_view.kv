<FilmScreen>
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Film Thickness"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.get_main_screen()]]
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRectangleFlatButton:
                size_hint: (1,1)
                icon: "arrow-down-drop-circle"
                id: solvent
                text: 'Solvent'
                on_release: root.solvent_menu.open()
            MDRectangleFlatButton:
                size_hint: (1,1)
                icon: "arrow-down-drop-circle"
                id: material
                text: 'Material'
                on_release: root.material_menu.open()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel: 
                text: 'Concentration:'
                width: dp(200)
            MDTextFieldRect:
                id: concentration
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDRectangleFlatIconButton:
                icon: "arrow-down-drop-circle"
                id: solution_types
                text: root._SOLUTION_TYPE_DEFAULT
                size_hint_x: None
                width: dp(100)
                on_release: root.types_menu.open()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56) 
            padding: dp(8)
            spacing: dp(16) 

            MDLabel:
                text: 'Volume:'
                size_hint_x: 1 
            MDTextFieldRect:
                id: volume
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDLabel:
                width: dp(100)
                halign: 'center'
                text: 'mL'
                size_hint_x: None
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                text: 'Film Area:'
            MDTextFieldRect:
                id: area
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDLabel:
                width: dp(100)
                markup: True
                halign: 'center'
                text: 'cm[sup]2[/sup]'
                size_hint_x: None
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRaisedButton:
                size_hint: (1,1)
                text: 'Clear'
                on_release: root.clear()
            MDRaisedButton:
                size_hint: (1,1)
                text: 'Calculate'
                on_release: root.calculate_button_pressed()
        MDLabel:
            id: result
            markup: True
            halign: 'center'
            text: ''
