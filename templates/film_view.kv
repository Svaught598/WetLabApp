<FilmScreen>
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Film Thickness"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.get_main_screen()]]
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRectangleFlatButton:
                id: solvent
                text: 'Solvent'
                size: 3 * dp(48), dp(48)
                on_release: MDDropdownMenu(items=app.SOLVENTS, width_mult=4).open(self)
            MDRectangleFlatButton:
                id: material
                text: 'Material'
                size: 3 * dp(48), dp(48)
                on_release: MDDropdownMenu(items=app.MATERIALS, width_mult=4).open(self)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            TextInput:
                id: volume

                hint_text: "Volume"
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0

            TextInput:
                id: concentration

                hint_text: "Concentration"
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            TextInput:
                id: area

                hint_text: "Film area (in cm)"
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0

            MDLabel:
                text: ''

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                text: ''

            MDLabel:
                text: ''

        BoxLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Button:
                text: 'Calculate Film Thickness'
            MDLabel:
                id: result
                text: ''