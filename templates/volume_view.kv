#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton

<VolumeScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "New Solution"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.get_main_screen()]]
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRectangleFlatIconButton:
                size_hint: (1,1)
                icon: "arrow-down-drop-circle"
                id: solvent
                text: 'Solvent'
                on_release: MDDropdownMenu(items=root.SOLVENT_NAMES, width_mult=4).open(self)
            MDRectangleFlatIconButton:
                size_hint: (1,1)
                icon: "arrow-down-drop-circle"
                id: material
                text: 'Material'
                on_release: MDDropdownMenu(items=root.MATERIAL_NAMES, width_mult=4).open(self)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel: 
                text: 'Concentration:'
                width: dp(200)
            MDTextFieldRect:
                id: concentration
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDRectangleFlatIconButton:
                icon: "arrow-down-drop-circle"
                id: solution_types
                text: root._SOLUTION_TYPE_DEFAULT
                size_hint_x: None
                width: dp(100)
                on_release: MDDropdownMenu(items=root._SOLUTION_TYPES, width_mult=4).open(self)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                id: mass_label
                width: dp(200)
                text: 'Mass of Compound:'
            MDTextFieldRect:
                id: mass
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDRectangleFlatIconButton:
                size_hint_x: None
                width: dp(100)
                icon: "arrow-down-drop-circle"
                id: mass_units
                text: root._MASS_UNIT_DEFAULT
                on_release: MDDropdownMenu(items=root._MASS_UNITS, width_mult=4).open(self)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                text: 'Molecular Weight:'

                visible: root._MOL_WEIGHT_FIELDS
                size_hint_x: 1 if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
            MDTextFieldRect:
                id: molecular_weight
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0

                visible: root._MOL_WEIGHT_FIELDS
                size_hint_x: 1 if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
            MDLabel:
                width: dp(100)
                halign: 'center'
                text: 'g/mol'

                visible: root._MOL_WEIGHT_FIELDS
                size_hint_x: None if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
        BoxLayout:
            id: solvent_density
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                text: 'Solvent Density:'

                visible: root._SOLVENT_DENSITY_FIELDS
                size_hint_x: 1 if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
            MDTextFieldRect:
                id: solvent_density
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0

                visible: root._SOLVENT_DENSITY_FIELDS
                size_hint_x: 1 if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
            MDLabel:
                width: dp(100)
                halign: 'center'
                text: 'g/mL'

                visible: root._SOLVENT_DENSITY_FIELDS
                size_hint_x: None if self.visible else 0
                opacity: 1 if self.visible else 0
                disabled: not self.visible
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRaisedButton:
                size_hint: (1,1)
                text: 'Clear'
                on_release: root.clear()
            MDRaisedButton:
                size_hint: (1,1)
                text: 'Calculate'
                on_release: root.calculate_button_pressed()
        MDLabel:
            id: volume_needed
            text: ''
