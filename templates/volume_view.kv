#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton

<VolumeScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "New Solution"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.get_main_screen()]]
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel: 
                text: 'Concentration:'
            TextInput:
                id: concentration
                hint_text: "Concentration"
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDRectangleFlatButton:
                id: solution_types
                text: 'Solution Type'
                size: 3 * dp(48), dp(48)
                on_release: MDDropdownMenu(items=root.SOLUTION_TYPES, width_mult=4).open(self)
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)

            MDLabel:
                id: mass_label
                text: 'Mass:'
            TextInput:
                id: mass

                hint_text: "Mass (in grams)"
                input_type: "number"
                input_filter: "float"
                padding: dp(10), dp(10), 0, 0
            MDLabel: 
                text: 'dropdown goes here for mass units'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(16)
            MDRectangleFlatButton:
                id: solvent
                text: 'Solvent'
                size: 3 * dp(48), dp(48)
                on_release: MDDropdownMenu(items=root.SOLVENT_NAMES, width_mult=4).open(self)
            MDRectangleFlatButton:
                id: material
                text: 'Material'
                size: 3 * dp(48), dp(48)
                on_release: MDDropdownMenu(items=app.MATERIALS, width_mult=4).open(self)
            MDLabel:
                id: density
                text: '1'
        BoxLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Button:
                text: 'Calculate volume needed'
                on_release: root.calculate_button_pressed()
            MDLabel:
                id: volume_needed
                text: ''
