<UpdateScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Update Data"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.exit()]]
        MDTabs:
            id: update_tabs
        AnchorLayout:
            anchor_x: 'right'
            size_hint_y: None
            height: dp(58)
            spacing: dp(5)
            padding: dp(5)
            MDFloatingActionButton:
                icon: 'plus'
                size_hint: None, None
                size: dp(48), dp(48)
                opposite_colors: True
                elevation_normal: 8
                on_release: root.plus_button_pressed()
            Widget:

<SolventTab>
    id: solvent
    RecycleView:
        id: solvent_rv
        viewclass: 'ButtonViewClass'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<MaterialTab>
    id: material
    RecycleView:
        id: solvent_rv
        viewclass: 'ButtonViewClass'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<NewSolventScreen>:
    BoxLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                size: self.size
                pos: self.pos

        MDToolbar:
            title: "New Solvent"
            md_bg_color: app.theme_cls.primary_color
            elevation: 10
            left_action_items: [['arrow-left', lambda x: root.back()]]
        ScrollView:
            do_scroll_x: False
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: dp(400)
                BoxLayout:
                    MDLabel:
                        font_style: 'H6'
                        halign: 'center'
                        text: 'Solvent Name'
                    MDTextFieldRect:
                        padding: 10, 10
                        id: name
                BoxLayout:
                    MDLabel:
                        font_style: 'H6'
                        halign: 'center'
                        text: 'Density (g/mL)'
                    MDTextFieldRect:
                        input_filter: 'float'
                        padding: 10, 10
                        id: density
                BoxLayout:
                    MDLabel:
                        font_style: 'H6'
                        halign: 'center'
                        text: 'Chemical Formula'
                    MDTextFieldRect:
                        padding: 10, 10
                        id: formula
                BoxLayout:
                    MDLabel:
                        font_style: 'H6'
                        halign: 'center'
                        text: 'Relative Polarity'
                    MDTextFieldRect:
                        input_filter: 'float'
                        padding: 10, 10
                        id: polarity
                BoxLayout:
                    MDRaisedButton:
                        padding: 10, 10
                        font_style: 'H3'
                        halign: 'center'
                        text: 'Add Solvent'
                        on_release: root.submit()


