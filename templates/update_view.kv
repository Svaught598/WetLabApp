<ButtonViewClass>
    text: root.name
    IconLeftWidget:
        icon: "flask"
    Container:
        id: container
        MDIconButton:
            icon: "file-edit"
            on_release: root.edit()
        MDIconButton:
            icon: "trash-can"
            on_release: root.confirm_popup()

