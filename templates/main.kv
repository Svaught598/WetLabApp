Screen:

    NavigationLayout:
        
        ScreenManager:
            id: screens
            Screen:
                name: 'menu'

                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Park Lab Group"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                    Widget:
                
                MDRaisedButton:
                    text: "Calculate Volume for Solution"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    on_press: root.ids.screens.current = 'volumeneeded'
                MDRaisedButton:
                    text: "Update data"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: root.ids.screens.current = 'update'
                MDRaisedButton:
                    text: "UNDER CONSTRUCTION"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                    on_press: root.ids.screens.current = 'thickness'

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer
