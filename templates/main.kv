Screen:

    NavigationLayout:
        
        ScreenManager:
            id: screens
            Screen:
                name: 'menu'

                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Park Lab Group"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                    Widget:
                
                MDFillRoundFlatButton:
                    text: "Make New Solution"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    size_hint_x: 0.8
                    on_press: 
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'volumeneeded'
                MDFillRoundFlatButton:
                    text: "Dilution"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'dilution'
                MDFillRoundFlatButton:
                    text: "Update data"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'update'
                MDFillRoundFlatButton:
                    text: "Calculate Film Thickness"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'thickness'

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer

<LicenseDialog>
    size_hint: None, None
    height: Window.height * 90 / 100
    width: Window.width * 90 / 100

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        MDLabel:
            text: "License"
            halign: "center"
            theme_text_color: "Custom"
            text_color: self.theme_cls.primary_color
            font_style: "H5"
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:

        ScrollView:
            bar_width: 0

            BoxLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: "10dp"

                MDLabel:
                    id: text_label
                    halign: "center"
                    markup: True
                    size_hint_y: None
                    height: self.texture_size[1]