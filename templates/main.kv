Screen:

    NavigationLayout:
        
        ScreenManager:
            id: screens
            Screen:
                name: 'menu'

                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        title: "Park Lab Group"
                        md_bg_color: app.theme_cls.primary_color
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]

                    Widget:
                
                MDFillRoundFlatButton:
                    text: "Make New Solution"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    size_hint_x: 0.8
                    on_press: 
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'volumeneeded'
                MDFillRoundFlatButton:
                    text: "Dilution"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'dilution'
                MDFillRoundFlatButton:
                    text: "Update data"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'update'
                MDFillRoundFlatButton:
                    text: "Calculate Film Thickness"
                    elevation_normal: 2
                    opposite_colors: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.2}
                    size_hint_x: 0.8
                    on_press:
                        root.ids.screens.transition.direction = 'left'
                        root.ids.screens.current = 'thickness'

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                id: content_drawer
